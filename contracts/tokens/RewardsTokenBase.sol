    ) internal virtual {}

    function _getRewardsInstance() internal view virtual returns(IRewardsBase);

    function _mint(address account, uint256 amount) internal virtual {
      require(account != address(0), "ERC20: mint to the zero address");

      _beforeTokenTransfer(address(0), account, amount);

      uint256 oldTotalSupply = _totalSupply;

      uint256 previousBalance = _balances[account];
      _totalSupply += amount;
      _balances[account] += amount;
      emit Transfer(address(0), account, amount);

      // console.log("after emit Transfer in mint rewards base");
      if (address(_getRewardsInstance()) != address(0) && !_rewardBlacklist[account]) {
        // console.log("in if before _getRewardsInstance");
        // use old supply so index doesn't increase but user is initiated
        _getRewardsInstance().accrueUserRewards(address(this), account, previousBalance, oldTotalSupply);
        // console.log("in if after _getRewardsInstance");
      }
      // console.log("after last if mint rewards base");

      _afterTokenTransfer(address(0), account, amount);
    }

    /**
     * @dev Moves `amount` of tokens from `sender` to `recipient`.
     *
     * This internal function is equivalent to {transfer}, and can be used to
     * e.g. implement automatic token fees, slashing mechanisms, etc.
     *
     * Emits a {Transfer} event.
     *
